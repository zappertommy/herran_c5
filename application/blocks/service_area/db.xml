<?xml version="1.0"?>
<schema version="0.3">
    <table name="btDCServiceArea">
        <field name="bID" type="I">
            <key/>
            <unsigned/>
        </field>
        <field name="cID" type="C" size="255"></field>
        <field name="headerTitle" type="X"></field>
        <field name="footerDesc" type="X2"></field>
        <field name="footerButton" type="X"></field>
        <field name="footerLink" type="X"></field>
    </table>
    
    <table name="btServiceAreaColumns">
        <field name="colID" type="I">
            <key/>
            <unsigned/>
        </field>
        <field name="bID" type="I"></field>
        <field name="title" type="C" size="255"></field>
        <field name="imageID" type="I">
            <unsigned />
            <default value="0" />
        </field>
        <field name="buttonLabel" type="C" size="255"></field>
        <field name="buttonLink" type="X"></field>
    </table>
    
    <table name="btServiceAreaLists">
        <field name="listID" type="I">
            <key/>
            <unsigned/>
            <autoincrement/>
        </field>
        <field name="colID" type="I">
            <unsigned/>
            <default value="0"/>
        </field>
        <field name="bID" type="I" />
        <field name="content" type="X2"></field>
    </table>
</schema>